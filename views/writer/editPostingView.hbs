<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Hiệu chỉnh bài viết</strong> 
                        </div>
                         <div class="card-body card-block">
                            <form action="" method="post"  class="form-horizontal">     
                                {{#each this.detail}}     
                                    <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="title-input" class=" form-control-label">Tiêu đề</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="title-input" name="title" value="{{Title}}" class="form-control">
                                        <small class="form-text text-muted">Tiêu đề không dài quá 50 từ</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="select" class=" form-control-label">Chuyên mục</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <select name="select" id="select" class="form-control">
                                            <option value="{{CatID}}">{{CatName}}</option>
                                            {{/each}}
                                            {{#each this.category}}
                                                <option value="{{CatID}}">{{CatName}}</option>
                                            {{/each}}
                                            {{#each this.detail}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="summary-input" class=" form-control-label">Tóm tắt nội dung</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea name="sumContent" id="textarea-input" rows="6" class="form-control">{{SumContent}}</textarea>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div id="editor" name="editor" style="width:100%; height:250px;">
                                        {{{Content}}}
                                    </div>
                                </div>
                                
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="url-input" class=" form-control-label">Link Youtube</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="url-input" name="text-input" placeholder="link Youtube" class="form-control">
                                    </div>
                                </div>
                                
                                
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="file-multiple-input" class=" form-control-label">File hình ảnh</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file"> 
                                    </div>
                                </div>
                                {{/each}}
                                <textarea name="trick" id="trick" style="display:none;"></textarea>
                                <div class="card-footer">
                                <button type="submit" id="saveButt" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                                </div>   
                            </form>
                        </div>
                                                     
                    </div>
                </div>  
        </div>
    </div>
</div>

