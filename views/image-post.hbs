							<div>
								<ul class="">
									
									<li><p><h6>BÀI VIẾT LIÊN QUAN: </h6></p>
										<ul>
											{{#each this.relative}}
											<p>
											<li>{{Date}}:<a href="/news/{{PostID}}/post"> {{Title}}</a></li>
											</p>
											{{/each}}
										</ul>
									</li>
									
								</ul>
							
							</div>
							
							<div class="comment-form">
								<h4>Post Comment</h4>
								<form>
									<div class="form-group form-inline">
										<div class="form-group col-lg-6 col-md-12 name">
											<input type="text" class="form-control" id="name" placeholder="Enter Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Name'">
										</div>
										<div class="form-group col-lg-6 col-md-12 email">
											<input type="email" class="form-control" id="email" placeholder="Enter email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'">
										</div>
									</div>
									<div class="form-group">
										<input type="text" class="form-control" id="subject" placeholder="Subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Subject'">
									</div>
									<div class="form-group">
										<textarea class="form-control mb-10" rows="5" name="message" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
									</div>
									<a href="/" class="primary-btn text-uppercase">Bình Luận</a>
								</form>
							</div>
						</div>
						<!-- End single-post Area -->
					</div>
					<div class="col-lg-4">
						<div class="sidebars-area">
							<div class="single-sidebar-widget editors-pick-widget">
								<h6 class="title">Phổ biến</h6>
								<div class="editors-pick-post">
									{{#each bestView}}
									<div class="feature-img-wrap relative">
										<div class="feature-img relative">
											<div class="overlay overlay-bg"></div>
											<img class="img-fluid" src="{{Avatar}}" alt="">
										</div>
										<ul class="tags">
											<li><a href="#">{{CatName}}</a></li>
										</ul>
									</div>
									<div class="details">
										<a href="/news/{{PostID}}/post">
											<h4 class="mt-20">{{Title}}</h4>
										</a>
										<ul class="meta">
											<li><a href="#"><span class="lnr lnr-user"></span>{{Name}}</a></li>
											<li><a href="#"><span class="lnr lnr-calendar-full"></span>{{Date}}</a></li>
											<li><a href="#"><span class="lnr lnr-bubble"></span>{{ViewNum}} Lượt xem </a></li>
										</ul>
										<p class="excert">
											{{SumContent}}</p>
									</div>
									{{/each}}
									<div class="post-lists">
										{{#each view }}
										<div class="single-post d-flex flex-row">
											<div class="thumb">
												<img style="height: 100px; width:150px; " src="{{Avatar}}" alt="">
											</div>
											<div class="detail">
												<a href="/news/{{PostID}}/post">
													<h6>{{Title}}</h6>
												</a>
												<ul class="meta">
													<li><a href="#"><span class="lnr lnr-calendar-full"></span>{{Date}}</a></li>
													<li><a href="#"><span class="lnr lnr-bubble"></span>{{ViewNum}} Lượt xem</a></li>
												</ul>
											</div>
										</div>
										{{/each}}
					
									</div>
								</div>
							</div>
							<div class="single-sidebar-widget ads-widget">
								<img class="img-fluid" src="img/sidebar-ads.jpg" alt="">
							</div>
							
						</div>
					</div>
				</div>
			</div>
