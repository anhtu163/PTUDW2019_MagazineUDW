										<div class="feature-img   relative" style="height: 200px; width: 350px; ">
											
												
											<div class="overlay overlay-bg"></div>
											<img class="img-fluid"  style="height: 200px; width: 350px; " src="{{Avatar}}" alt="">
										</div>
										<ul class="tags">
											<li><a href="#">{{CatName}}</a></li>
										</ul>
									</div>
									<div class="details">
										<a href="/news/{{PostID}}/post">
											<h4>{{Title}}</h4>
										</a>
										<ul class="meta">
											<li><a href="#"><span class="lnr lnr-user"></span>{{Name}}</a></li>
											<li><a href="#"><span class="lnr lnr-calendar-full"></span>{{Date}}</a></li>
