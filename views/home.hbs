<!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-9">
                        <h2 class="title-1 m-b-25"> Danh sách bài đăng </h2>
                        <div class="table-responsive table--no-card m-b-40">
                            <form action="/editPosting" method="GET">
                                <table class="table table-borderless table-striped table-earning" id="tbl-posting">
                                <thead>
                                    <tr>
                                        <th >Tên bài</th>
                                        <th>Ngày đăng</th>
                                        <th>thể loại</th>
                                        <th>Xuất bản</th>
                                    </tr>
                                    
                                </thead>
                                <tbody>
                                    {{#each this.news}}
                                    <tr>
                                        <td>{{Title}}</td>
                                        <td>{{Date}}</td>
                                        <td>{{CatName}}</td>
                                        <td><input type="checkbox" disabled></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            </form>
                            
                        </div>
                    </div>
                </div>
                <div class="row" >
                    <div class="col-md-12" >
                        <div class="copyright">
                            <p>Copyright © 2019 Group38</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT-->
    <!-- END PAGE CONTAINER-->
    <script>
$(document).ready(function(){
    $('#tbl-posting tr').click(function(){
        var trSelected = $(this).data();
        localStorage.setItem('trSelected', trSelected);
        window.location.replace("/editpost");
    });
    
})
</script>